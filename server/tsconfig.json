{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "target": "es2016",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "noEmit": true,
    "typeRoots": ["types"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
